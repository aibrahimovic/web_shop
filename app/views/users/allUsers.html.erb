<h2>Svi korisnici</h2>

<table border="1">
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Role</th>
       <th>Role ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.role.name %></td>
        <td><%= user.role_id %></td>
        
        <td><%= link_to 'Izmjena', edit_user_path(user) %></td>
        <td><%= link_to 'Brisanje', user, method: :delete, data: { confirm: 'Da li ste sigurni?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


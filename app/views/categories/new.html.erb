<div class="row">
  <br>
  	<%= form_for(@category) do |f| %>

  	  <% unless flash[:same_category].blank? %>
          <%= flash[:same_category] %>
      <% end %>
      

        <div class="field">
          <%= f.label :Kategorija %><br>
          <%= f.text_field :name, class: "form-control", style: "width: 300px;"%>
        </div>
        <br>
        <br>

      <%= f.submit "Kreiraj kategoriju", class: "btn btn-primary", style: "width: 300px;"%>
    <% end %>
  	

</div>
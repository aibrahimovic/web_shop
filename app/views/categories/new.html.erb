<h2>New category</h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
   
  	<%= form_for(@category) do |f| %>

  	  <% unless flash[:same_category].blank? %>
          <%= flash[:same_category] %>
      <% end %>
      <br>
      <br>  

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
      <br>

      <%= f.submit "New category", class: "btn btn-primary" %>
    <% end %>
  	
  </div>
</div>
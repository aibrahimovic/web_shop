<h2>Svi proizvodi</h2>

<table border="1">
  <thead>
    <tr>
      <th>ID</th>
      <th>Slika</th>
      <th>Naziv</th>
      <th>Cijena</th>
      <th>Opis</th>
      <th>Kategorija</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= image_tag(product.image, size: "150x150") %></td>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td><%= product.category.name %></td>
        
        <td><%= link_to 'Prikazivanje', product %></td>
        <td><%= link_to 'Izmjena', edit_product_path(product) %></td>
        <td><%= link_to 'Brisanje', product, method: :delete, data: { confirm: 'Da li ste sigurni?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


	      					<%= f.submit t('buy_button'), :class => "btn btn-primary", :id=> "buy_now" %>
	      					<!--<input type="button" value="KUPI ODMAH" class="btn btn-primary" id="buy_now"> -->
	      				</div>
	      			</td>
	      			</tr>
	      		</table>
	      		<% end %>
				
			</td>
			</tr>
		</table>
	
	</div> <!-- item -->
</div> <!-- wraper -->



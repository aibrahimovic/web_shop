	<body>
		<div id="sliderId">
		</div>
		
		<br>
		<br>
		<h2 id="prodaucts_on_sale"> <%= t('newest') %> </h2>


		<% counter = 0 %>
		<table id="all_products2">
		<% @all_products_on_sale.each do |product| %>
			<% if counter%4 == 0 || counter == 0 %>
				<tr><td>
			<% else %>
				<td>
			<% end %>
			<%= link_to product_path(product.id) do %>
				<div data-content1="<%= product.name %>"  data-content2="<%= product.get_price %>KM"  class="image">
					<%= image_tag(product.image.url(:small)) %><br>
					<% counter += 1 %>
				</div>
			<% end %>
				</td>
				<% if counter%4 == 0 || counter == @all_products_on_sale.length %>
					</tr>
				<% end %>
			<% end %>
			<% counter = 0 %>
		</table>

	</body>
</html>


